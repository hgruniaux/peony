BINARY_OPERATOR(P_BINARY_SUB, P_TOK_MINUS, 11)
BINARY_OPERATOR(P_BINARY_SHL, P_TOK_LESS_LESS, 10)
BINARY_OPERATOR(P_BINARY_SHR, P_TOK_GREATER_GREATER, 10)
